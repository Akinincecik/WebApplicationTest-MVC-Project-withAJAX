@model EditStudentViewModel


<div class="modal-header">
    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Student</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">

    <form id="frmEditStudent" asp-action="EditStudent" method="post"
          data-ajax="true" data-ajax-method="post" data-ajax-update="#modalEditContent">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="john doe" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Surname" class="form-label">Surname</label>
            <input asp-for="Surname" class="form-control" placeholder="johndoe" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DateOfBirth" class="form-label">Date Of Birth</label>
            <input asp-for="DateOfBirth" class="form-control" placeholder="johndoe" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="MainLanguage" class="form-label">MainLanguage</label>
            <input asp-for="MainLanguage" class="form-control" placeholder="johndoe" />
            <span asp-validation-for="MainLanguage" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ForeignLanguage" class="form-label">ForeignLanguage</label>
            <input asp-for="ForeignLanguage" class="form-control" placeholder="johndoe" />
            <span asp-validation-for="ForeignLanguage" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Class" class="form-label">Class</label>
            <select asp-for="Class" class="form-select">
                <option value="">Please Select</option>
                <option value="9-A">9-A</option>
                <option value="9-B">9-B</option>
                <option value="9-C">9-C</option>
                <option value="10-A">10-A</option>
                <option value="10-B">10-B</option>
                <option value="10-C">10-C</option>
            </select>
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Role" class="form-label">Role</label>
            <select asp-for="Role" class="form-select">
                <option value="">Please Select</option>
                <option value="student">Student</option>
                @* <option value="user">User</option> *@
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Locked">
                <label class="form-check-label" asp-for="Locked">
                    Locked
                </label>
            </div>
        </div>

        <input type="hidden" asp-for="Id" />

    </form>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary btn-sm" form="frmEditStudent"><i class="fa fa-save me-2"></i>Save</button>
</div>

@if (string.IsNullOrEmpty(Model.Done) == false)
{
    <script>
        $("#modalEdit").modal("hide");
        toastr.success('@Model.Done',"Success")
        refresh.click();
    </script>
}
