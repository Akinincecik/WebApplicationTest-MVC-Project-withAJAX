<script>
    // Mevcut URL'yi al
    const currentPath = window.location.pathname;

    if (currentPath === '/Account/Login' || currentPath === '/Account/Register') {
        document.querySelector('header').style.display = 'none'; // Header'ı gizle
    }
    else {
        document.querySelector('header').style.display = 'block'; // Header'ı göster
    }

    // Header'ın görünmemesi gereken rotalar
    const noHeaderRoutes = ["/Login.html", "/Register.html"];

    // Header elementini seç
    const header = document.getElementById("header");

    // Eğer mevcut URL, gizlenecek rotalardan biriyse header'ı gizle
    if (noHeaderRoutes.includes(currentPath)) {
        header.style.display = "none";
    }
</script>
